<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="10sp"
    app:shapeAppearance="@style/RoundedSquare.10Percent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15sp"
        android:paddingVertical="10sp">

        <TextView
            android:id="@+id/name_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="23sp"
            tools:text="Ngày tươi vui, Melodious,..." />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:drawablePadding="4sp"
            app:drawableStartCompat="@drawable/ic_info"
            tools:text="Mã đơn hàng: fbvqqi324t2332"/>

        <TextView
            android:id="@+id/date_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4sp"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_clock"
            tools:text="10/12/2024 - 15:58:00" />

        <TextView
            android:id="@+id/state_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4sp"
            android:textSize="18sp"
            app:drawableStartCompat="@drawable/ic_load"
            tools:text="Đang đợi thanh toán" />

        <TextView
            android:id="@+id/price_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            tools:text="12,000,000đ" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>