<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Hình ảnh sản phẩm -->
    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textColor="#222222"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivProductImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp" />

    <!-- Kích thước sản phẩm -->
    <TextView
        android:id="@+id/tvProductSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        app:layout_constraintStart_toStartOf="@id/tvProductName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />


    <!-- Giá sản phẩm -->
    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$83.97"
        android:textColor="#222222"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvProductSize"
        app:layout_constraintStart_toStartOf="@id/tvProductName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Nút giảm số lượng -->
    <ImageButton
        android:id="@+id/btnDecreaseQuantity"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/button_round_background"
        android:src="@drawable/ic_minus"
    android:contentDescription="Decrease quantity"
    android:scaleType="centerInside"
    android:padding="4dp"
    app:layout_constraintTop_toBottomOf="@id/tvProductPrice"
    app:layout_constraintStart_toStartOf="@id/tvProductName"
    android:layout_marginTop="12dp" />

    <!-- Số lượng sản phẩm -->
    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:textColor="#222222"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/btnDecreaseQuantity"
        app:layout_constraintEnd_toStartOf="@id/btnIncreaseQuantity"
        app:layout_constraintStart_toEndOf="@id/btnDecreaseQuantity"
        app:layout_constraintTop_toTopOf="@id/btnDecreaseQuantity" />

    <!-- Nút tăng số lượng -->
    <ImageButton
        android:id="@+id/btnIncreaseQuantity"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/button_round_background"
        android:src="@drawable/ic_plus"
    android:contentDescription="Increase quantity"
    android:scaleType="centerInside"
    android:padding="4dp"
    app:layout_constraintBottom_toBottomOf="@id/btnDecreaseQuantity"
    app:layout_constraintStart_toEndOf="@id/tvQuantity"
    app:layout_constraintTop_toTopOf="@id/btnDecreaseQuantity" />

</androidx.constraintlayout.widget.ConstraintLayout>
