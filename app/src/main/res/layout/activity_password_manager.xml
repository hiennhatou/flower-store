<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Thanh tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Nút quay lại -->
            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="#7A5C43" />

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Quản lý mật khẩu"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- Mật khẩu hiện tại -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Mật khẩu hiện tại"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/current_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="****************"
                android:inputType="textPassword"
                android:background="@drawable/bg_edit_text"
                android:paddingStart="16dp"
                android:paddingEnd="40dp"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:id="@+id/toggle_current_password"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_visibility_off"/>
        </RelativeLayout>

        <!-- Quên mật khẩu -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true"
            android:text="Quên mật khẩu"
            android:textColor="#7A5C43"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:clickable="true"/>

        <!-- Mật khẩu mới -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Mât khẩu mới"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="****************"
                android:inputType="textPassword"
                android:background="@drawable/bg_edit_text"
                android:paddingStart="16dp"
                android:paddingEnd="40dp"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:id="@+id/toggle_new_password"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_visibility_off"/>
        </RelativeLayout>

        <!-- Xác nhận mật khẩu mới -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Xác nhận mật khẩu mới"
            android:textSize="14sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/confirm_new_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="****************"
                android:inputType="textPassword"
                android:background="@drawable/bg_edit_text"
                android:paddingStart="16dp"
                android:paddingEnd="40dp"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:id="@+id/toggle_confirm_password"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_visibility_off"/>
        </RelativeLayout>

        <!-- Nút Thay đổi mật khẩu -->
        <Button
            android:id="@+id/change_password_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#7A5C43"
            android:text="Đổi mật khẩu"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</ScrollView>
