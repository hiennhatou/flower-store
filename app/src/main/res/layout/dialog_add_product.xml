<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etMaSanPham"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mã sản phẩm"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etTenSP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etMaSanPham"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etSoLuong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Số lượng"
        android:padding="16dp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/etTenSP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etGia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Giá"
        android:inputType="numberDecimal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etSoLuong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etHinhAnh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="URL hình ảnh"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etGia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etMoTa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:hint="Mô tả"
        app:layout_constraintTop_toBottomOf="@id/etHinhAnh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etMaLoaiHoa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:hint="Mã loại hoa"
        app:layout_constraintTop_toBottomOf="@id/etMoTa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnChonHinhAnh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chọn Hình Ảnh"
        app:layout_constraintTop_toBottomOf="@id/etMaLoaiHoa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ConstraintLayout con để chứa 2 nút "Thêm" và "Hủy" nằm ngang -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnChonHinhAnh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnThem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thêm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnHuy"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            app:layout_constraintStart_toEndOf="@id/btnThem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>